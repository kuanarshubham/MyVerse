{
  "compilerOptions": {
    // ---- Critical settings for a shared package ----
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // ---- This now precisely matches your project structure ----
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  // This tells TypeScript to compile everything inside your `src` folder
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}